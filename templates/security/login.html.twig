{% extends 'base.html.twig' %}
{% block body %}
    <div class="login-container">
        <a href="/" class="logo logo-text">
            Parraindex
        </a>
        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
        <form method="post">
            {% if error is defined and error%}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}


            <div class="input-container">
                <label for="inputUsername">Pseudo ou mail</label>
                <input type="text" value="{{ last_username is defined ? last_username : "" }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="input-container">
                <div class="flex align-items-center">
                    <label for="inputPassword">Mot de passe</label>
                    <a>Mot de passe oublié ?</a>
                </div>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>

        </form>
{#        J'ai déjà un comtpe #}
        <div class="go-register">
            <p>Nouveau ici ? <a href="/register">Créer un compte</a>.</p>
        </div>
    </div>

    <script>
        let body = document.getElementById("bg")
        window.onload = function() {
            body.classList.toggle("bg-pp");
            body.classList.toggle("bg");
        }
    </script>
{% endblock %}
